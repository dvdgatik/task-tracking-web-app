cat > .env.example << 'EOF'
# Postgres
POSTGRES_USER=todo_user
POSTGRES_PASSWORD=todo_pass
POSTGRES_DB=todo_db
POSTGRES_PORT=5432

# Backend FastAPI
API_PORT=8000
API_HOST=0.0.0.0
DATABASE_URL=postgresql+psycopg://todo_user:todo_pass@postgres:5432/todo_db
EOF

# create the actual .env from this example
cp .env.example .env
